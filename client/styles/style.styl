@import '_normalize.styl'
@import '_typography.styl'

body
  background offwhite

.main
  display: flex

.photo-grid
  display flex
  flex-wrap wrap
  margin-top: 3rem

.sep li
    font-size: 1.5rem
    list-style: none
    padding: 2rem 10rem 2rem 1rem
    border-bottom: solid hsl(0, 0%, 100%) 1px
    margin-right: 10px
    cursor: pointer;

.sep li:hover
  opacity: .5

ul.sep
    margin: 0
    padding: 0

.sidebar
    background: hsl(224, 16%, 19%)
    color: hsl(0, 0%, 100%)

    h1
      border-bottom: solid 3px hsl(210, 37%, 22%)
      margin-left: 0
      padding: 5px 0px 5px 10px
      cursor: pointer
    h1:hover
      opacity: .5

.search
    text-align: center
    padding: 2rem 0
    background: hsl(210, 37%, 22%)
    color: hsl(0, 0%, 100%)

    input
      width: 30%;
      border: none;
      padding: 1rem;
      margin-left: 15px;
    span
      font-size: 15px
      font-style: italic


.grid-figure
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative
  width 15%
  flex-direction column
  display flex
  justify-content space-between
  text-align center

#avator
  max-width: 100px

.addComment input
      margin-right: 25px
      padding: 4px 25px
      margin-top: 50px

.single-photo
  @extend .grid-figure
  max-width 900px
  margin 0 auto
  display flex
  background white
  width: inherit;
  flex-direction: column;
  justify-content: initial;

  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 60%
    max-width 100%
    width: inherit;
    flex-direction: initial;
    display: initial;
    justify-content: initial;
  .comments
    flex 1 0 40%
    max-width 40%
  .grid-photo
    width 100%
    margin 0

.avator
  width: 50%

.grid-photo-wrap
  display flex

.name
  font-size 1.3rem
  margin-left 5px
  margin-bottom 2px

.description
      font-size 1rem
      margin-left 5px
      font-style italic
      margin-top 0

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.comment
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  p
    font-size 1.2rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1

.comment-form
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical

.info p
  margin 0

.date-provider p
    font-size 1rem
    margin 10px 0 -10px 0
    font-style italic

.date-provider
    display flex
    justify-content space-around


.grid-photo-wrap
  position relative
  text-align left

.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size 2rem
  padding 1rem
  position absolute
  color blue
  left 50%
  top 50%
  pointer-events none


/*
  Buttons
*/

.control-buttons
  display flex
  justify-content space-between

button, .button
  border 2px solid lighten(grey, 90%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  font-size 15px
  color blue
  transition all 0.2s
  box-sizing padding-box
  &:hover, &:focus
    border-color blue
    outline 0


.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size
  background blue
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0


@media(max-width: 1600px)
  .grid-figure
    width: 25%;

@media(max-width: 1000px)
  .grid-figure
    width: 50%
